@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "SubCategory";
}

<div class="subCategories">
    @foreach (dynamic subCategory in Model)
    {
    <div class="subCategory">
        <a href="~/Home/Categories/SubCategories/Tests?id=@subCategory.Id&idLangLearn=@ViewBag.idLangLearn&idLangNative=@ViewBag.idLangNative">
            <p>@subCategory.Name (@subCategory.Learn)</p>
            <img src="../../@subCategory.Picture" width="128" height="128" alt="@subCategory.Name">
        </a>
    </div>
}
</div>

<style>
    .subCategories {
        display: flex;
        flex-direction: column;
        text-align: center;
    }

    .subCategory {
        width: 225px;
        height: 225px;
        margin: auto;
    }
</style>