@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Category";
}

<div class="categories">
    @foreach (dynamic category in Model)
    {
    <div class="category">
        <a href="~/Home/Categories/SubCategories?id=@category.Id&idLangLearn=@ViewBag.idLangLearn&idLangNative=@ViewBag.idLangNative">
            <p>@category.Name (@category.Learn)</p>
            <img src="../@category.Picture" width="128" height="128" alt="@category.Name">
        </a>
    </div>
     }
</div>

<style>
    .categories {
        display: flex;
        flex-direction: column;
        text-align: center;
    }

    .category {
        width: 225px;
        height: 225px; 
        margin: auto; 
    }
</style>